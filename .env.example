# Configuración de API Keys

# OpenRouter API Key (recomendado para múltiples modelos)
OPENROUTER_API_KEY=tu_openrouter_api_key_aqui

# OpenAI API Key (alternativa)
OPENAI_API_KEY=tu_openai_api_key_aqui

# Modelo de IA a usar
DIABETES_MODEL=mistralai/mistral-7b-instruct

# Langfuse (Opcional - para monitoreo de LLM, RAG y tools)
# Obtén claves en: https://cloud.langfuse.com/
LANGFUSE_PUBLIC_KEY=tu_langfuse_public_key_aqui
LANGFUSE_SECRET_KEY=tu_langfuse_secret_key_aqui
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Otras configuraciones
GRADIO_SHARE=False
GRADIO_PORT=7862
